        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btn_siguiente"
        android:layout_alignParentBottom="true"
